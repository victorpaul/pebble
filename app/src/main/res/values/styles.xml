<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="AppTheme.defaultText">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">22sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="AppTheme.defaultButton" parent="AppTheme.defaultText">

    </style>

    <style name="AppTheme.statusTextPositive" parent="AppTheme.defaultText">
        <item name="android:background">#00ff00</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">10dp</item>

    </style>

    <style name="AppTheme.statusTextNegative" parent="AppTheme.statusTextPositive">
        <item name="android:background">#ff0000</item>
    </style>


</resources>
