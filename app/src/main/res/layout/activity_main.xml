<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
    >

        <TextView
            android:id="@+id/txt_pebble_is_not_connected"
            android:text="@string/txt_pebble_is_not_connected"
            style="@style/AppTheme.statusTextNegative"
         />

        <TextView
            android:id="@+id/txt_pebble_is_connected"
            android:text="@string/txt_pebble_is_connected"
            style="@style/AppTheme.statusTextPositive"
        />

        <Button
            android:id="@+id/btn_install_pebble_app"
            android:text="Install/Reinstall pebble app"
            style="@style/AppTheme.defaultButton"
        />

        <TextView
            android:padding="10dp"
            android:text="Amazing content gonna be here.... soon"
            style="@style/AppTheme.defaultText"
        />

    </LinearLayout>



</RelativeLayout>
