<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
    >

        <com.rightutils.rightutils.widgets.TypefaceTextView
            android:id="@+id/txt_pebble_status"
            android:text="@string/txt_pebble_is_connected"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
        />

        <com.rightutils.rightutils.widgets.TypefaceButton
            android:id="@+id/btn_install_pebble_app"
            android:text="@string/action_install_app"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
        />

        <View
            style="@style/horizontalSeparator"
        />

        <ScrollView
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.rightutils.rightutils.widgets.TypefaceTextView
                    android:id="@+id/txt_read_me"
                    android:text="@string/txt_introduction"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                />

                <View
                    style="@style/horizontalSeparator"
                />

                <com.rightutils.rightutils.widgets.TypefaceCheckbox
                    android:id="@+id/checkbox_shutdown_wifi"
                    android:text="@string/action_shut_down_wifi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                />

                <com.rightutils.rightutils.widgets.TypefaceCheckbox
                    android:id="@+id/checkbox_show_show_readme"
                    android:text="show read me on the next launch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                />
            </LinearLayout>


        </ScrollView>
    </LinearLayout>

</RelativeLayout>
